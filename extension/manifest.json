{
    "manifest_version": 3,
    "name": "SNS炎上リスク推定機能",
    "version": "1.0.0",
    "description": "SNS投稿前に炎上リスクを評価し、問題箇所をハイライト表示します",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "src/background/sw.js",
      "type": "module"
    },
    "action": {
      "default_popup": "src/popup/index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "options_page": "src/options/index.html",
    "content_scripts": [
      {
        "matches": [
          "https://*.twitter.com/*",
          "https://*.x.com/*",
          "https://*.facebook.com/*",
          "https://*.threads.net/*",
          "https://*.linkedin.com/*"
        ],
        "js": ["src/content/content.js"],
        "css": ["src/content/content.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["models/*", "src/content/inject.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "permissions": [
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://*.twitter.com/*",
      "https://*.x.com/*",
      "https://*.facebook.com/*",
      "https://*.threads.net/*",
      "https://*.linkedin.com/*"
    ]
  }